<%= render 'users/search_form.html.erb' %>
<div class="container">
    <% if @users.present? %>
        <% @users.each do |user| %>
            <br>
                <div class="d-flex border-end-0 bg-white border rounded-pill ">
                    <div class="card-deneme">
                        <div class="thumbnail ">
                            <a href= <%= user.pic_url %> >
                            <img src= <%= user.pic_url %> alt="Lights" style="width:100%; left: 30px;"  class="rounded-pill ">

                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 align-self-center">
                        <p><%= user.name %></p>
                        <p><%= user.username %></p>
                    </div>
                    <div class="col-md-4 align-self-center " style="right: 30px; bottom: 8px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square position-absolute end-0" type="button" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                        
                    </div>
                </div>
            </br>


        <% end %>
    <% else %>
        <center> Kullanıcı bulunamadı. </center>
    <% end %>

</div>

<style>
.card-deneme {
    display: flex;
    width: 20%;
   align-items: center; 
   padding-left: 0 !important;
}
</style>