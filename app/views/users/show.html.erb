<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<!------ Include the above in your HEAD tag ---------->
<%= render 'users/navbar.html.erb' %>
<div class="container">
	<div class="row">        
        <div class="col-md-4 ">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="icon" >
                        <%= link_to edit_user_url(@user.id) do %>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square position-absolute end-0" type="button" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                            </svg>
                        <% end %>
                    </div>

                    <div class="box box-info">
                    <div class="box-body">
                        <div  align="center"> <img alt="User Pic" src= <%= @user.pic_url %>  id="profile-image1" class="img-circle img-responsive " style="width:200px;height: 200px">                     
                    </div>
                    <br>
                    <div class="clearfix"></div>
                    <hr style="margin:5px 0 5px 0;">
                
                    <div class=" col-sm-offset-4"><%= @user.name %> </div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <div class="col-sm-offset-5"> <%= "@" + @user.username %> </div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>
                    <br>
                    <div class="col-sm-5 col-xs-6 tital " >Email:</div><div class="col-sm-7"><%= @user.email %></div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <div class="col-sm-5 col-xs-6 tital " >Telefon:</div><div class="col-sm-7"><%= @user.phone %></div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <div class="col-sm-5 col-xs-6 tital " >Adres:</div><div class="col-sm-7"><%= @user.address %></div>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>
    
       
                </div> 
            </div>
        </div>  
    </div>
    </div>
    <div class="col-md-6 ">
        <h4 class= " bg-white  col-sm-offset-4"> Album Listesi </h4>
        <% @albums.each do |album| %>
            <br>
                <div class="d-flex border-end-0 bg-white border rounded-pill ">
                    <div class="card">
                        <a href= <%= Photo.all.where(album_id: album.id)[0].thumbnail_url %> >
                        <img 
                            src= <%= Photo.all.where(album_id: album.id)[0].thumbnail_url %> 
                            alt="Lights" 
                            style="width:100%; left: 30px;" 
                            alt="View of the City in the Mountains"
                            >
                        </a>
                    </div>
                    
                    <div class="col-md-6 align-self-center">

                        <p><%= album.title.titleize %></p>
                    </div>
                </div>
            </br>
        <% end %>
    </div>



<style>
.card{
    display: flex;
    width: 20%;
   align-items: center; 
   padding-left: 0 !important;
}

.icon {
    position: relative;
}
.icon img {
    position: absolute;
    top: 0px;
    right: 0px;
}

</style>






         